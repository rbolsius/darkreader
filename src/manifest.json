{
    "manifest_version": 2,
    "name": "Lights Out",
    "version": "3.4.8",
    "description": "This extension inverts the brightness of Web pages to make it easier to view in dark environments.",
    "browser_action": {
        "default_title": "Lights out",
        "default_icon": "img/dr_active_38.png",
        "default_popup": "popup/popup.html"
    },
    "icons": {
        "16": "img/dr_16.png",
        "48": "img/dr_48.png",
        "128": "img/dr_128.png"
    },
    "background": {
        "page": "background/background.html"
    },
    "permissions": [
        "fontSettings",
        "storage",
        "tabs",
        "<all_urls>"
    ],
    "commands": {
        "toggle": {
            "suggested_key": {
                "default": "Alt+Shift+D"
            },
            "description": "Toggle On/Off"
        },
        "addSite": {
            "suggested_key": {
                "default": "Alt+Shift+A"
            },
            "description": "Toggle current site"
        }
    }
}
